                                    </div>
                                </div>

                            </form>
                            }



                        </div>
                    </div>
                </div>
                <div class="section-colored">
                    <div class="container">
                        <div class="row">
                            @if (Model.ContactNumbersModel4.ContactNumberId != null)
                            {
                            <form action="@Url.Action("EditContactNumber", "Contact")" method="POST" role="form" class="form-horizontal">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="input2" class="col-md-2">Contact Number 4</label>
                                        <div class="col-md-10">
                                            <input type="text" id="input2" class="form-control" name="contactNumber" value="@Model.ContactNumbersModel4.ContactNumber">
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <input type="hidden" value="@Model.ContactNumbersModel4.ContactNumberId" name="contactNumberId">
                                        <button class="btn btn-primary" type="submit">Save contact number 4</button>
                                    </div>
                                </div>

                            </form>
                            }

                        </div>
                    </div>
                </div>
                <div class="section">
                    <div class="container">
                        <div class="row">
                            @if (Model.ContactNumbersModel5.ContactNumberId != null)
                            {
                            <form action="@Url.Action("EditContactNumber", "Contact")" method="POST" role="form" class="form-horizontal">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="input2" class="col-md-2">Contact Number 5</label>
                                        <div class="col-md-10">
                                            <input type="text" id="input2" class="form-control" name="contactNumber" value="@Model.ContactNumbersModel5.ContactNumber">
                                        </div>
                                    </div>
                                    <div class="form-group col-lg-12">
                                        <input type="hidden" value="@Model.ContactNumbersModel5.ContactNumberId" name="contactNumberId">
                                        <button class="btn btn-primary" type="submit">Save contact number 5</button>
                                    </div>
