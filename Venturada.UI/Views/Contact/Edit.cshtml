                                        <label for="input2" class="col-md-2">Contact Number 2</label>
                                        <div class="col-md-10">
                                            <input type="text" id="input2" class="form-control" name="contactNumber" value="@Model.ContactNumbersModel2.ContactNumber">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="hidden" value="@Model.ContactNumbersModel2.ContactNumberId" name="contactNumberId">
                                        <button class="btn btn-primary" type="submit">Save contact number 2</button>
                                    </div>
                                </div>

                            </form>
                            }
                        </div>
                    </div>
                </div>
                <div class="section">
                    <div class="container">
                        <div class="row">
                            @if (Model.ContactNumbersModel3.ContactNumberId != null)
                            {
                            <form action="@Url.Action("EditContactNumber", "Contact")" method="POST" role="form" class="form-horizontal">
                                <div class="row">
                                    <div class="form-group">
                                        <label for="input2" class="col-md-2">Contact Number 3</label>
