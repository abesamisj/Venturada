@model Venturada.UI.ViewModels.ProductsPageViewMainModel
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Products <small>add images? edit main paragraph? edit your product list?</small></h1>
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Edit Products</li>
                </ol>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-->
    @Html.Partial("_EditProductsMainPartial", Model.ProductsMainModel)
    
    @Html.Partial("_EditProductsListPartial", Model.ProductsListModel)
}
else
{
    @Html.Partial("_NoAccess")
}

