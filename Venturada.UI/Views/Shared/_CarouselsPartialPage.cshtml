@model System.Collections.Generic.List<Venturada.UI.ViewModels.CarouselsViewModels>

<div class="container">
    <div id="carousel-example-generic" class="carousel slide">
        @if (Model.Count > 0)
        {

             <!-- Indicators -->
            <ol class="carousel-indicators hidden-xs">
                @foreach (var item in Model)
                {
                    if (Model.Count == 1)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        break;
                    }
                    if (Model.Count == 2)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        break;
                    }
                    if (Model.Count == 3)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        break;
                    }
                }
            </ol>

            int counter = 0;
            <!-- Wrapper for slides -->
            <div class="carousel-inner ">
                @foreach (var item in Model)
                {


                    if (counter < 1)
                    {
                        <div class="item active">
                            <img class="img-responsive" src="@item.CarouselImageString" alt="">
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img class="img-responsive" src="@item.CarouselImageString" alt="">
                        </div>
                    }
                    counter++;
                }
                
            </div>
        }
        else
        {
             <!-- Indicators -->
            <ol class="carousel-indicators hidden-xs">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner ">
                <div class="item active">
                    <img class="img-responsive" src="/Contents/Images/Home/farmmeatbrochure3.png" alt="">
                </div>
                <div class="item">
                    <img class="img-responsive" src="/Contents/Images/Home/iloveporkOriginal.png" alt="">
                </div>
            </div>

        }
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev"></a>
        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next"></a>
    </div>
</div>
@section scripts
{
    <script>
    // Activates the Carousel
    $('.carousel').carousel({
        interval: 5000
    })
    </script>
}