@model Venturada.UI.Models.PriceListModel
@{
    ViewBag.Title = "Price List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script>
    jQuery.validator.setDefaults({
        highlight: function (element, errorClass, validClass) {
            if (element.type === 'radio') {
                this.findByName(element.name).addClass(errorClass).removeClass(validClass);
            } else {
                $(element).addClass(errorClass).removeClass(validClass);
                $(element).closest('.form-group').removeClass('success').addClass('error');
            }
        },
        unhighlight: function (element, errorClass, validClass) {
            if (element.type === 'radio') {
                this.findByName(element.name).removeClass(errorClass).addClass(validClass);
            } else {
                $(element).removeClass(errorClass).addClass(validClass);
                $(element).closest('.form-group').removeClass('error').addClass('success');
            }
        }
    });
    </script>

</head>
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit Products Details</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>Edit Products Details</li>
            </ol>
        </div>
    </div><!-- /.row -->
    <div class="section">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    @using (Html.BeginForm("EditPrice", "Price", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-lg-8">
                            @Html.LabelFor(model => model.ProductName, new { @class = "required" })
                            <div class="controls">
                                @Html.TextBoxFor(model => model.ProductName, new { maxlength = 50, @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProductName, null, new { @class = "help-inline", style = "color: red" })
                            </div>
                        </div>
                        <div class="form-group col-lg-8">
                            @Html.LabelFor(model => model.ProductDescription)
                            <div class="controls">
                                @Html.TextBoxFor(model => model.ProductDescription, new { maxlength = 100, @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-lg-8">
                            @Html.LabelFor(model => model.Price, new { @class = "required" })
                            <div class="controls">
                                @Html.TextBoxFor(model => model.Price, new { maxlength = 50, @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Price, null, new { @class = "help-inline", style = "color: red" })
                            </div>
                        </div>
                        <div class="form-group col-lg-12">
                            <input type="hidden" value="@Model.PriceListId" name="priceListId">

                            <button class="btn btn-primary" type="submit">Save</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

