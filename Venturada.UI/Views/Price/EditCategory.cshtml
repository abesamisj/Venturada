@model Venturada.UI.Models.ProductCategoryModel
@{
    ViewBag.Title = "Price List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Product Category</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>Add Category</li>
            </ol>
        </div>
    </div><!-- /.row -->
    <div class="row">
        <div class="col-sm-12">
            <div class="row">
                @using (Html.BeginForm("EditCategory", "Price"))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group col-sm-12">
                        <label for="input3">Category</label>
                        @Html.TextBoxFor(model => model.ProductCategory, new { maxlength = 100, @class = "form-control" })
                    </div>

                    <div class="form-group col-lg-12">
                        <input type="hidden" value="@Model.ProductCategoryId" name="productCategoryId">

                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>


</div>