@model Venturada.UI.ViewModels.ProductCategoryViewModel
@{
    ViewBag.Title = "Price";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Price list <small>add more products? edit prices? edit your product list?</small></h1>
                <ol class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Edit Price List</li>
                </ol>
            </div>
        </div><!-- /.row -->
    </div><!-- /.container-->
    @Html.Partial("_EditProductCategoryPartial", Model.ProductCategoryModel)
    <hr />
}
else
{
    @Html.Partial("_NoAccess")
}

